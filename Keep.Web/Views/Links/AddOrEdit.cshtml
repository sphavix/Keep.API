@model Keep.Web.Models.LinkViewModel
@{
    ViewBag.Title = "";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.LinkName)
            @Html.EditorFor(model => model.LinkName)
            @Html.ValidationMessageFor(model => model.LinkName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkUrl)
            @Html.EditorFor(model => model.LinkUrl)
            @Html.ValidationMessageFor(model => model.LinkUrl)
        </div>

        <div class="form-group">
            <button type="submit" value="Add" class="btn button">Submit</button>
            <a href="@Url.Action("Index", "Links")" class="btn button">Cancel</a>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
} 