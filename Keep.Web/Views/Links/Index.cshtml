@model IEnumerable<Keep.Web.Models.LinkViewModel>

@{
    ViewBag.Title = "Index";
}

<br />
<p>
   <a href="@Url.Action("AddOrEdit", "Links")" class="btn btn-default"><i class="fa fa-plus"></i>Add Link</a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkUrl)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

@foreach (var item in Model) {
   <tbody>
       <tr>
           <td>
               @Html.DisplayFor(modelItem => item.LinkName)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.Description)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.LinkUrl)
           </td>
           <td>
               <a href="@Url.Action("AddOrEdit", "Links", new { id = item.Id})" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i></a>
               <a href="@Url.Action("Delete","Links", new { id = item.Id})" class="btn btn-danger btn-sm"><i class="fa fa-trash-can"></i></a>
               
           </td>
       </tr>
   </tbody>
}

</table>
@section scripts{
    <script>
        $(function () {
            var successmessage = '@TempData["SuccessMessage"]'
            if (successmessage != '') {
                alertify.success(successmessage);
            }
        });
    </script>    
}