@model IEnumerable<Keep.Web.Models.LinkViewModel>

@{
    ViewBag.Title = "Index";
}

<br />
<p>
    <a href="@Url.Action("AddOrEdit", "Links")" class="btn btn-default"><i class="fa fa-plus"></i>Add Link</a>
</p>
<hr />
@foreach (var item in Model)
{
    <div class="card border-info text-dark">
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => item.LinkName)</h4>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
            <p class="card-text">@Html.DisplayFor(model => item.LinkUrl)</p>
        </div>
        <div></div>
        <div class="card-footer">
            <a href="@Url.Action("AddOrEdit", "Links", new { id = item.Id})" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i>Edit</a>
            <a href="@Url.Action("Delete","Links", new { id = item.Id})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i>Delete</a>
        </div>

    </div>
}
@section scripts{
    <script>
        $(function () {
            var successmessage = '@TempData["SuccessMessage"]'
            if (successmessage != '') {
                alertify.success(successmessage);
            }
        });
    </script>
}